<h1 align="center">Registration form</h1>
    <table style="border: 2px solid black" border="1" cellspacing="0">
      <thead>
      <tr>
         <th>Name</th>
         <th>Email</th>
         <th colspan="3">Actions</th>
      </tr>
     </thead>
    <tbody>
           <% @students.each do |student| %>
    <tr>
         <td style="padding: 10px;"><%= student.name %></td>
         <td style="padding: 10px;"><%= student.email %></td>
         <td style="padding: 10px;">
           <% if student.documents.any? %>
               <%= link_to "View", student_document_path(student, student.documents.first) %>
          <% else %>
          No documents available
        <% end %>
        </td>
          <td style="padding: 10px;"><%= link_to "Edit", edit_student_path(student) %></td>
          <td style="padding: 10px;"><%= link_to "Delete", student_path(student), method: :delete, data: { confirm: "Are you sure?" } %></td>
          <td style="padding: 10px;">
          <%= link_to 'Upload', new_student_document_path(student, student_name: student.name, student_details: student.description), class: 'btn btn-primary' %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
